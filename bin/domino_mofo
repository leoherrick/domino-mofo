#!/usr/bin/env ruby 
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__) 
require 'domino_mofo' 
include DominoMofo

match = Match.new
@input = STDIN
@command_list = ["hand", "test", "exit"]

match.start_match
match.current_game.make_cpu_moves

def get_command
  temp_command = @input.gets
  temp_command.chomp!
  if @command_list.index(temp_command) != nil then
    @command = temp_command
  end
end


while @command != "exit"
  get_command
  if @command == "hand"
    dominoes = match.current_player.hand
    announcer = match.announcer
    announcer.return_message(dominoes)
  elsif
    puts @command
  end
end


